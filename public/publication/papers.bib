	pages = {359--372},
	file = {Whitney et al. - 2018 - Probabilistic decision tools for determining impac.pdf:/Users/corywhitney/Zotero/storage/W9HXPPHS/Whitney et al. - 2018 - Probabilistic decision tools for determining impac.pdf:application/pdf},
}

